<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.servicebestpractice.MainActivity">
    <Button android:id="@+id/start_download"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Start Download"></Button>

    <Button android:id="@+id/pause_download"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Pause Download"></Button>

    <Button android:id="@+id/cancel_download"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cancel Download"></Button>
</LinearLayout>
